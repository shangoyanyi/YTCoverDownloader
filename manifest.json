{
  "name": "YTCoverDownloader",
  "description" : "Helps to download YouTube video cover image",
  "version": "1.0",
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },  
  "permissions": ["declarativeContent", "storage", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens popup.html"
    }
  }
}
